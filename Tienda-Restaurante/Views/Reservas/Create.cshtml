@model Tienda_Restaurante.Models.Reserva
@{
    Layout = "_Layout";
    ViewData["Title"] = "Reservar Mesa";
}

<div class="container mt-5">
    <h2 class="text-center mb-4"><i class="bi bi-calendar-check"></i> Realizar una Reserva</h2>

    @if (TempData["error"] != null)
    {
        <div class="alert alert-danger text-center">@TempData["error"]</div>
    }

    @if (TempData["success"] != null)
    {
        <div class="alert alert-success text-center">@TempData["success"]</div>
    }

    <form asp-controller="Reservas" asp-action="Create" method="post" class="border rounded p-4 shadow-sm bg-light">
        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Fecha</label>
                <input type="date" asp-for="Fecha" class="form-control" required />
            </div>
            <div class="col-md-3">
                <label class="form-label">Hora Inicio</label>
                <input type="time" asp-for="HoraInicio" class="form-control" required />
            </div>
            <div class="col-md-3">
                <label class="form-label">Hora Fin</label>
                <input type="time" asp-for="HoraFin" class="form-control" required />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">Número de Personas</label>
                <input type="number" asp-for="Personas" min="1" max="30" class="form-control" placeholder="Ejemplo: 4" required />
            </div>

        </div>

        <div class="mb-3">
            <label class="form-label">Observaciones</label>
            <textarea asp-for="Observaciones" class="form-control" rows="3" placeholder="Ejemplo: Celebración de cumpleaños"></textarea>
        </div>

        @Html.AntiForgeryToken()

        <div class="text-center">
            <button type="submit" class="btn btn-primary btn-lg px-5">Confirmar Reserva</button>
        </div>
    </form>
</div>
