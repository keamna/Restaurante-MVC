@using Tienda_Restaurante.DTOs
@model OrderDetailModalDTO

<div class="modal fade" id="modal-@Model.DivId" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Order Detail</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <table class="table table-striped">
                    <tr>
                        <th>Platillo</th>
                        <th>Categoría</th>
                        <th>Precio</th>
                        <th>Cantidad</th>
                        <th>Monto Total</th>
                    </tr>
                    @foreach (var item in Model.DetalleOrden)
                    {
                        <tr>
                            <td>@item.Platillo.PlatilloName</td>
                            <td>@item.Platillo.Categoria.CategoriaName</td>
                            <td>@item.PrecioUnitario</td>
                            <td>@item.Cantidad</td>
                            <td>@(item.Cantidad* item.PrecioUnitario)</td>
                        </tr>
                    }
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>