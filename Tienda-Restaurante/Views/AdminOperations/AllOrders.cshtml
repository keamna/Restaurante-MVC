@using Tienda_Restaurante.DTOs
@model IEnumerable<Orden>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "AllOrders";
}

<div style="width:100%" class="mt-2">
    <h4>Ordenes</h4>
     @if (Model != null && Model.Count() > 0)
    {
        <table class="table table-striped">
            <tr>
                <th>Fecha Orden</th>
                <th>Nombre</th>
                <th>Correo Electrónico</th>
                <th>Teléfono</th>
                <th>Dirección</th>
                <th>Estado de pago</th>
                <th>Estado de orden</th>
                <th>Acciones</th>
            </tr>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.FechaOrden.ToString("dd-MM-yyyy")</td>
                    <td>@order.Name</td>
                    <td>@order.Email</td>
                    <td>@order.MobileNumber</td>
                    <td>@order.Address</td>
                    <td>@order.PaymentMethod | @(order.IsPaid ? "Pagado" : "No Pagado")</td>
                    <td>@order.OrdenEstado.EstadoNombre</td>
                    <td>
                        <button type="button" data-bs-toggle="modal" data-bs-target="#modal-@order.Id" class="btn btn-secondary">
                            Detalle de Orden
                        </button>
                        <a asp-action="UpdateOrderStatus" asp-route-orderId="@order.Id" class="btn btn-secondary">Cambiar estado de orden</a>
                        <a asp-action="TogglePaymentStatus" asp-route-orderId="@order.Id" class="btn btn-secondary">Cambiar estado de pago</a>

                        @await Html.PartialAsync("/Views/AdminOperations/_OrderDetailModal.cshtml", new OrderDetailModalDTO { DivId = order.Id.ToString(), DetalleOrden = order.DetalleOrden })
                    </td>

                </tr>

            }
        </table>

    }
    else
    {
        <h5>No orders</h5>
    }


</div>
